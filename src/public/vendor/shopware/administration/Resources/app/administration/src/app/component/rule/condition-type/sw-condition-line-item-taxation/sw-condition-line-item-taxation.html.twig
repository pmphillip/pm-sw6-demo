{% block sw_condition_value_content %}
<div class="sw-condition-line-item-taxation sw-condition__condition-value">
    {% block sw_condition_line_item_taxation_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_line_item_taxation_field_identifiers %}
    <sw-entity-multi-select
        size="medium"
        entity="tax"
        :disabled="disabled"
        :entity-collection="taxes"
        @change="setTaxIds"
    />
    {% endblock %}
</div>
{% endblock %}
