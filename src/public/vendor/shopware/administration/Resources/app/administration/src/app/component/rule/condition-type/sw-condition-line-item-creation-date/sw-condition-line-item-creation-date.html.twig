{% block sw_condition_value_content %}
<div class="sw-condition-line-item-creation-date sw-condition__condition-value">

    {% block sw_condition_line_item_creation_date_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_line_item_creation_date %}
    <sw-datepicker
        v-model="lineItemCreationDate"
        size="medium"
        date-type="datetime-local"
        required
        :disabled="disabled"
    />
    {% endblock %}
</div>
{% endblock %}
